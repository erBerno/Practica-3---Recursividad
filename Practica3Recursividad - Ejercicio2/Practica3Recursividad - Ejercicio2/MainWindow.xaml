<Window x:Class="Practica3Recursividad___Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica3Recursividad___Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="EJERCICIO 2" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="txbMensaje" HorizontalAlignment="Left" Margin="166,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="91,70,0,0" TextWrapping="Wrap" Text="Mensaje:" VerticalAlignment="Top" Height="18"/>
        <Button x:Name="btnMostrar" Content="Mostrar" HorizontalAlignment="Left" Margin="322,55,0,0" VerticalAlignment="Top" Height="18" Width="95" Click="btnMostrar_Click"/>
        <ListBox x:Name="lstShow" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,120,10,10"/>
        <Button x:Name="btnLimpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="322,79,0,0" VerticalAlignment="Top" Width="95" Click="btnLimpiar_Click"/>

    </Grid>
</Window>
