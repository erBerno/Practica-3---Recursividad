<Window x:Class="Practica3Recursividad___Ejercicio8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica3Recursividad___Ejercicio8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Viewbox Stretch="Uniform">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                    <Button x:Name="btnGenerar" Click="btnGenerar_Click" Width="50" Content="Generar"/>
                    <TextBlock x:Name="tbLabel" Margin="20,5,0,0"/>
                    <TextBlock TextWrapping="Wrap" Text="EJERCICIO 8" Width="170" TextAlignment="Center" FontWeight="Bold" FontSize="14"/>
                </StackPanel>
                <Canvas Name="canvas" Width="300" Height="300" Margin="5"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
